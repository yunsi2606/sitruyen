{
  "kind": "collectionType",
  "collectionName": "chapters",
  "info": {
    "singularName": "chapter",
    "pluralName": "chapters",
    "displayName": "Chapter"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "chapter_number": {
      "type": "decimal"
    },
    "content": {
      "type": "blocks"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "view_count": {
      "type": "biginteger"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "chapter"
    },
    "reading_histories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reading-history.reading-history",
      "mappedBy": "chapter"
    },
    "story": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::story.story",
      "inversedBy": "chapters"
    },
    "chap_published_at": {
      "type": "date"
    }
  }
}